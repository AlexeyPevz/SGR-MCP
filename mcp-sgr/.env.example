# OpenRouter Configuration
OPENROUTER_API_KEY=your-openrouter-api-key-here
OPENROUTER_DEFAULT_MODEL=google/gemini-2.0-flash-exp:free

# LLM Backends Configuration
LLM_BACKENDS=openrouter
ROUTER_DEFAULT_BACKEND=openrouter

# Cache Configuration
CACHE_ENABLED=true
CACHE_STORE=sqlite:///app/data/cache.db

# Benchmark Configuration
BENCHMARK_MAX_CONCURRENT=2
BENCHMARK_DEFAULT_TIERS=cheap,medium
BENCHMARK_DEFAULT_CATEGORIES=analysis,planning

# Optional: Ollama Configuration (for local models)
# OLLAMA_HOST=http://localhost:11434
# OLLAMA_DEFAULT_MODEL=llama3.1:8b

# Optional: Custom LLM Endpoint
# CUSTOM_LLM_URL=https://your-custom-llm.com/v1/completions

# Telemetry (optional)
OTEL_ENABLED=false
# OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

# HTTP Server (if using HTTP API)
HTTP_ENABLED=false
HTTP_PORT=8080
HTTP_HOST=0.0.0.0
HTTP_REQUIRE_AUTH=true
HTTP_AUTH_TOKEN=change-me-to-secure-token