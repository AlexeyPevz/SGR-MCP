# LLM providers
LLM_BACKENDS=ollama,openrouter
OLLAMA_HOST=http://localhost:11434
OLLAMA_DEFAULT_MODEL=llama3.1:8b
OPENROUTER_API_KEY=
OPENROUTER_DEFAULT_MODEL=meta-llama/llama-3.1-8b-instruct
CUSTOM_LLM_URL=

# Router
ROUTER_POLICY_FILE=./config/router_policy.yaml
ROUTER_DEFAULT_BACKEND=ollama

# SGR settings
SGR_BUDGET_DEPTH=lite
SGR_PRE_ANALYSIS=auto
SGR_POST_ANALYSIS=lite
SGR_SAMPLE_RATE=0.5

# Cache
CACHE_ENABLED=true
CACHE_STORE=sqlite:///./data/cache.db
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE_MB=100
CACHE_MAX_ENTRIES=10000

# Traces/Telemetry
TRACE_ENABLED=true
TRACE_STORE=sqlite:///./data/traces.db
TRACE_RETENTION_DAYS=7

OTEL_ENABLED=false
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=mcp-sgr

# HTTP facade
HTTP_ENABLED=true
HTTP_PORT=8080
HTTP_HOST=0.0.0.0
HTTP_AUTH_TOKEN=change-me
HTTP_REQUIRE_AUTH=true
HTTP_CORS_ORIGINS=*

# Rate limiting
RATE_LIMIT_ENABLED=false
RATE_LIMIT_MAX_RPM=120

# Privacy
PII_REDACT=true